<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo" xmlns:drawer="nativescript-telerik-ui/sidedrawer">
  <drawer:RadSideDrawer>
      <drawer:RadSideDrawer.mainContent>
        <StackLayout>
          <ListView items="{{entries}}">
            <ListView.itemTemplate>
              <Label text="{{title}}" textWrap="true" />
            </ListView.itemTemplate>
          </ListView>
        </StackLayout>
      </drawer:RadSideDrawer.mainContent>
      <drawer:RadSideDrawer.drawerContent>
        <StackLayout cssClass="drawerContent">
          <StackLayout cssClass="headerContent">
            <Label text="Categories"/>
          </StackLayout>
          <ListView items="{{categories}}">
            <ListView.itemTemplate>
              <Label text="{{label}}" />
            </ListView.itemTemplate>
          </ListView>
        </StackLayout>
      </drawer:RadSideDrawer.drawerContent>
    </drawer:RadSideDrawer>



</Page>
