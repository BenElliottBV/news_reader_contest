<Page navigatingTo="navigatingTo" xmlns="http://schemas.nativescript.org/tns.xsd">
  <ActionBar style="background-color:#3F51B5;color:white" title="{{article.origin.title}}"></ActionBar>
  <GridLayout rows="*,auto">
    <ScrollView>
      <StackLayout row="0">
        <Label style="font-weight:bold;margin: 5 5 5 5" text="{{article.title}}" textWrap="true"/>
        <Image horizontalAlignment="center" style="height:200" src="{{article.visual.url}}" stretch="center"/>
        <!-- <Label text="{{article.summary.content}}" textWrap="true" style="margin:5 5 5 5" /> -->
        <HtmlView html="{{ article.summary.content }}" style="margin:5 5 10 5"/>

      </StackLayout>
    </ScrollView>
    <!-- <WebView url="{{url}}" row="0" visible="{{showWebView}}"></WebView> -->
    <Label horizontalAlignment="center" row="1" style="font-size:14;color:#7986CB;" tap="{{readArticle}}" text="Read Full Article" textWrap="true"/>
  </GridLayout>
</Page>
